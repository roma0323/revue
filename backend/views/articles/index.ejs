        </a>
        <span class=" font-serif flex  pl-4">
            <form class=" m-2 self-center" action="/logout?_method=DELETE" method="POST" >
                 <button class=" active:scale-125 hover:underline-offset-4 hover:scale-110 hover:text-yellow-500  transition ease-out duration-300"type="submit" >Log Out</button>
            </form>
            <a href="/articles/new" class="p-1.5 rounded-md bg-gradient-to-b from-teal-300 to-blue-300 hover:from-blue-300 hover:to-teal-300 	 text-white active:scale-125  hover:scale-110   transition ease-out duration-700 mr-4 ml-2 self-center " >New article</a>
        </span>
    </nav>
    
    
    <div class = "  container grid   sm:grid-cols-2  lg:grid-cols-3  grid-cols-1 gap-6  sm:px-8 md:px-20 px-2  mt-16 mx-auto "> 
       
        
        <% articles.forEach(article =>{ 
            %>
            
                <div class="font-serif drop-shadow-lg w-full h-full flex flex-col justify-between  bg-gray-100   rounded-lg  border border-gray-200  pt-6 px-6 pb-3">
                    <a href="articles/<%=article.id%>" class=" active:scale-110  hover:scale-105 hover:text-gray-600  transition ease-out duration-800" >
                    <div >
                        <h4 class=" truncate border-b-2 border-gray-300   text-2xl pb-1 mb-2 uppercase"><%=article.title%></h4>
                        <p class="h-48 mx-2 mb-2  overflow-hidden break-words  text-md"><%= article.description%></p>
                    </div>
                    <span class=" flex justify-end  ">
                        <span class="px-2 py-1.5 mb-2 rounded-lg bg-gradient-to-b from-teal-100 to-blue-100 	 text-xs "><%=article.createdAt.toLocaleDateString()%></span>
                    </span>
                        
                    <div>
                        
                        <div class="flex items-center justify-end mr-2">
                            
                            <button class=" active:scale-125 m-2   flex items-end justify-end  underline hover:underline-offset-4 hover:scale-110 hover:text-teal-500  transition ease-out duration-500">
                                <a href="articles/edit/<%=article.id%>" >Edit</a>
                            </button>
                            <form action ="/articles/<%= article.id%>?_method=delete" method="post" class="d-inline" >
                                <button  type="submit" class="ml-2  flex items-end justify-end  underline hover:underline-offset-4 active:scale-125  hover:scale-110 hover:text-red-600  transition ease-out duration-200">Delete</button>  
                            </form>
                            
    
                        </div>
                    </div>
                        
                     
                      
                        
                </a>
                    
                </div> 
            <%
        })%>
       
