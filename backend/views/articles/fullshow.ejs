<div class = "container mt-16 mx-auto p-6">
    
    <div class="font-serif drop-shadow-lg w-full h-full flex flex-col justify-between  bg-gray-100  rounded-lg border border-gray-200 mb-6 p-6">
        
        <div >
            <h4 class="  break-words h-auto m-2 text-4xl mb-6 uppercase"><%=article.title%></h4>
            <p class="h-auto mx-4 break-words  text-md"><%= article.description%></p>
        </div>
        <span class=" flex justify-end  ">
            <span class="p-2 my-2 rounded-lg bg-gradient-to-b from-teal-100 to-blue-100 text-xs "><%=article.createdAt.toLocaleDateString()%></span>
        </span>
        <div>
            <div class="flex items-center justify-end mr-2 ">

                <button class="mr-2   flex items-end justify-end underline active:scale-125 hover:underline-offset-4 hover:scale-110 hover:text-teal-500  transition ease-out duration-500">
                    <a href="edit/<%=article.id%>" >Edit</a>
                </button>
                <form action ="/articles/<%= article.id%>?_method=delete" method="post" class="d-inline" >
                    <button  type="submit" class="ml-2  flex items-end justify-end underline active:scale-125 hover:underline-offset-4 hover:scale-110 hover:text-red-600  transition ease-out duration-200">Delete</button>  
                </form>


            </div>
        </div>
    </div>
    
    <div class = "font-serif container  mt-24 mx-auto ">
        <div class="text-4xl mt-5 pb-1 border-b-2 border-gray-200 uppercase">Comment</div>
        
        <div class="font-serif  w-full h-full flex flex-col justify-between    mb-6  pl-24 py-10">
    <!--留言成功-->
    <% comments.forEach(comment =>{
        %>
        
                <h4 class="h-auto p-3 break-words  text-md drop-shadow-md rounded-lg  bg-gray-100  "><%=comment.commentcontent%></h4>
                


                <div class="flex items-center justify-end mb-4 pr-2">
                    <div class = "p-1 my-2 rounded-lg bg-gradient-to-b from-teal-100 to-blue-100 text-xs  mr-2"><%=comment.createdAt.toLocaleDateString()%> </div>
                    <button class="m-2    underline hover:underline-offset-4 active:scale-125 hover:scale-110 hover:text-teal-500  transition ease-out duration-700">
                        <a href="/articles/<%=comment.id%>/comments/edit"  class="btn btn-info">Edit</a>
                    </button>
                    <form action ="/articles/<%= comment.id%>/comments/delete?_method=delete" method="post" class="d-inline" >
                        <button  type="submit" class="m-2   underline active:scale-125 hover:underline-offset-4 hover:scale-110 hover:text-red-600  transition ease-out duration-200">Delete</button>  
                    </form>
                </div>
               
        
        <%
    })%>

